{
  "watch": [
    "src/",
    "index.js"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "src/uploads/",
    "src/logs/",
    "src/tests/",
    "*.test.js",
    "*.spec.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false
} 